{
  "name": "messager",
  "version": "sprint_2",
  "engines": {
    "npm": "8.5.5",
    "node": "16.14.0"
  },
  "scripts": {
    "dev": "parcel src/pages/index.hbs --no-cache",
    "build": "parcel build src/index.html --no-cache --public-url ./",
    "start": "parcel src/index.html --no-cache",
    "reserve": "npm run build && node server.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "alias": {
    "core": "./src/core",
    "components": "./src/components",
    "pages": "./src/pages",
    "helpers": "./src/helpers",
    "styles": "./src/styles",
    "assets": "./src/assets"
  },
  "devDependencies": {
    "@anikin/parcel-transformer-handlebars": "1.0.9",
    "@parcel/transformer-inline-string": "2.8.2",
    "@parcel/transformer-sass": "2.8.2",
    "@types/node": "18.11.17",
    "parcel": "2.8.2",
    "parcel-plugin-handlebars-precompile": "1.0.2",
    "typescript": "4.9.3"
  },
  "dependencies": {
    "express": "4.18.2",
    "handlebars": "4.7.7",
    "nanoid": "4.0.0"
  },
  "@parcel/transformer-css": {
    "drafts": {
      "nesting": true
    }
  }
}
