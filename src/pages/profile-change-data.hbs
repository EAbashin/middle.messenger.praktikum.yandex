{{!< base}}

<div class="profile__wrapper">
    <div class="profile__back">
        <a class="profile__back_btn" href="./index.hbs"><img src="../assets/back.png" alt="Back"></a>
    </div>
    <div class="profile__container">
        <div class="profile__photo-container">
            <img src="../assets/avatar.png" alt="photo" class="profile__photo-container_photo">
        </div>
        <div class="profile__info">
            <div class="profile__options">
                <div class="profile__options_title">Email</div>
                <input name="email" type="email" class="profile__options_descr" placeholder="pochta@yandex.ru" value="pochta@yandex.ru">
            </div>
            <div class="profile__separator"></div>
            <div class="profile__options">
                <div class="profile__options_title">Login</div>
                <input name="login" type="text" class="profile__options_descr" placeholder="ivanivanov" value="ivanivanov">
            </div>
            <div class="profile__separator"></div>
            <div class="profile__options">
                <div class="profile__options_title">Name</div>
                <input name="name" type="text" class="profile__options_descr" placeholder="Ivan" value="Ivan">
            </div>
            <div class="profile__separator"></div>
            <div class="profile__options">
                <div class="profile__options_title">Surname</div>
                <input name="surname" type="text" class="profile__options_descr" placeholder="Ivanov" value="Ivanov">
            </div>
            <div class="profile__separator"></div>
            <div class="profile__options">
                <div class="profile__options_title">Name in chat</div>
                <input name="nameInChat" type="text" class="profile__options_descr" placeholder="Ivan" value="Ivan">
            </div>
            <div class="profile__separator"></div>
            <div class="profile__options">
                <div class="profile__options_title">Phone</div>
                <input name="tel" type="tel" class="profile__options_descr" placeholder="+7 (999) 999 99 99" value="+7 (909) 967 30 30">
            </div>
        </div>
        <div class="profile__links">
            <button class="profile__links_btn">Save</button>
        </div>


    </div>
</div>
