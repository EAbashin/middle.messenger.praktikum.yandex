{{!< base}}

<div class="modal__wrapper">
    <div class="modal__window">
        <h2 class="modal__title">Login</h2>
        <form class="modal__inputs">
            {{> input addClass="modal__error" type="text" placeholder="Name"}}
            {{> input addClass="modal__error" type="password" placeholder="Password"}}
            <span class="modal__error_text modal__general_error">Login or password is not correct</span>
        </form>
        <div class="modal__btns">
            <button class="modal__btn">Enter</button>
            <a class="modal__link" href="registration.hbs">Registration</a>
        </div>
    </div>
</div>
