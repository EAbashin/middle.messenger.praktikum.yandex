{
	"compilerOptions": {
		"rootDir": "./src",
		"outDir": "./dist",
		"baseUrl": "./src",
		"target": "es2016",
		"moduleResolution": "node",
		"allowJs": true,
		"noImplicitAny": true,
		"noUnusedLocals": true,
		"sourceMap": true,
		"strictNullChecks": true,
		"allowSyntheticDefaultImports": true
	},
	"typeRoots": [
		"node_modules/@types",
		"typings/app.d.ts",
		"typings/hbs.d.ts"
	],
	"include": [
		".env.d.ts",
		"./src",
		"./node_modules/handlebars/types",
		"./typings"
	],
	"parserOptions": {
		"project": "./tsconfig.json"
	}
}
